pipeline {
    agent any
    stages {
        stage('Checkout GIT') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[url: 'https://github.com/IyadhJm/miniProjet.git']]
                ])
            }
        }

        stage('MVN CLEAN') {
            steps {
               withMaven(maven : 'apache-maven-3.8.7') {
              bat'mvn clean compile'
           }
         }
        }

        stage('MVN COMPILE') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('MVN PACKAGE') {
            steps {
                sh 'mvn package'
            }
        }

        stage('MVN TEST') {
            steps {
                sh 'mvn test'
            }
        }


      }
    }