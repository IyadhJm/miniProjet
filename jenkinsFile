pipeline {
    agent any
    stages {
        stage('Checkout GIT') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[url: 'https://github.com/IyadhJm/miniProjet.git']]
                ])
            }
        }

        stage('Set up Environment') {
            steps {
                withEnv(["JAVA_HOME=${tool 'jdk-17'}/bin", "PATH+MAVEN=${tool 'maven-3.8.7'}/bin:${env.JAVA_HOME}"]) {
                    sh "java -version"
                    sh "mvn --version"
                }
            }
        }

        stage('MVN CLEAN') {
            steps {
                withMaven(maven: 'apache-maven-3.8.7') {
                    bat 'mvn clean compile'
                }
            }
        }

        stage('MVN BUILD') {
            steps {
                withMaven(maven: 'apache-maven-3.8.7') {
                    sh "mvn --batch-mode -V -U -e clean deploy -Dsurefire.useFile=false"
                }
            }
        }
    }
}